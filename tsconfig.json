{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es5",
		"module": "commonjs",
		"lib": [ "es2015", "es2016", "es2017" ],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"declarationDir": "dist/types",
		"outDir": "dist/lib"
	},
	"include": [
		"src"
	]
}
